{
    "name": "YogurtNonZeroRISCY",
    "n_gpu": 2,

    "arch": {
        "type": "YogurtPyramidModel256",
        "args": {}
    },
    "data_loader": {
        "type": "YogurtPyramidDataLoader",
        "args":{
            "data_dir": "/home/stxianyx/code/eda/data/nonzeroRISCY/out",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00000001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "MSELoss",
    "metrics": [
        "R_squares"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 15,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
